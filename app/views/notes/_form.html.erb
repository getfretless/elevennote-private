<%= form_for @note do |f| %>
  <p>
    <%= f.text_field :title,
      placeholder: title_placeholder,
      autofocus: title_autofocus?(f.object)
    %>
  </p>
  <p>
    <%= f.bootsy_area :body_html, editor_options: {
      font_styles: false, color: false, image: false, html: true
      }, placeholder: 'Just start typing...' %>
  </p>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-default' %>
    <% if @note.persisted? %>
      <%= link_to note_path(@note),
        method: :delete,
        data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    <% end %>
  </div>
<% end %>
