<!DOCTYPE html>
<html>
<head>
  <title>Elevennote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container wrap">
  <div class="row">
    <div class="col-xs-12">
      <header>
        <div class="well">ElevenNote</div>
      </header>
    </div>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-xs-4">
        <nav id="sidebar">
          <div class="well">
            <%= link_to 'ADD NEW NOTE', new_note_path %>
            <%= render 'notes/list' %>
          </div>
        </nav>
      </div>
      <div class="col-xs-8">
        <main>
          <!-- BEGIN main content -->
          <%= flash_messages %>
          <%= yield %>
        </main>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

</body>
</html>
